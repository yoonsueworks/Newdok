{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": ["dom", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "components/*": ["components/*"],
      "shared/*": ["components/shared/*"],
      "config/*": ["config/*"],
      "pages/*": ["pages/*"],
      "styles/*": ["styles/*"],
      "constants/*": ["constants/*"],
      "api/*": ["public/api/*"],
      "icons/*": ["public/assets/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "**/*.tsx", "pages/api/user-research/index.js"]
}
